<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CRUDappMAUI.MainPage"
            Shell.NavBarIsVisible="False">
    <ScrollView>
    <VerticalStackLayout Margin="20">
        
        <Label FontSize="Large">Leave Type</Label>
        <Picker Title="Select a Leave Type" FontSize="Large">
            <Picker.Items>
                <x:String>Medical</x:String>
                <x:String>Casual</x:String>
               
                
            </Picker.Items>
        </Picker>
        <Label FontSize="Large">From Date</Label>
        <DatePicker MinimumDate="{Binding MinDate}"
            MaximumDate="{Binding MaxDate}"
            Date="{Binding SelectedDate}" 
                    FontSize="Large"/>

        <Label FontSize="Large">To Date</Label>
        <DatePicker MinimumDate="{Binding MinDate}"
            MaximumDate="{Binding MaxDate}"
            Date="{Binding SelectedDate}" 
                    FontSize="Large"/>
        <Label FontSize="Large">Days/Hours</Label>
        <Entry x:Name="days"
            Placeholder="Enter Days/Hours"
            FontSize="Large"/>
        <Label FontSize="Large">Type</Label>
        <Entry x:Name="Type"
            Placeholder="Enter Type"
            FontSize="Large"/>
        <Label FontSize="Large">Status</Label>
        <Entry x:Name="Status"
            Placeholder="Enter Status"
            FontSize="Large"/>
        <Label FontSize="Large">Leave Reason</Label>
        <Editor x:Name="editor"
            Placeholder="Enter your Leave Reason Here"
            HeightRequest="250"
            FontSize="Large"/>

            <Button Text="Submit"
                VerticalOptions="Center"
                HorizontalOptions="Center"/>
        </VerticalStackLayout>
        

    </ScrollView>

</ContentPage>
